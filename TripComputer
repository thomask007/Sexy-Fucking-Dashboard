class TripComputer
{
  //Member Variables
  float RPM;
  float gearRatio;
  float totalTravelledDistance; 
  float radius; // supposed to be given in the .csv, idk about this yet
  float speed;
  float distance;
  
  void getCurrentSpeed(float RPM, float gearRatio, float radius) 
  {
    if (filePath == "car_status_BMW_323i.csv")
    {
      radius = 23;
    }
    else if (filePath == "car_status_Truck_F150.csv")
    {
      radius = 25.4;
    } 
    speed = ( (RPM/60) * (1/gearRatio) * 2 * PI * radius); // from document
  }
  
  //Distance = speed because speed is measured in m/s 
  float distanceTravelled()
  {
    distance = speed;
    return distance;
  }
  
  //Adding distance to totalTravelledDistance to accumulate for total
  float updateTotalDistance()
  {
    totalTravelledDistance += distance;
    return totalTravelledDistance;
  } 
  
  void setTripComputerVariables(float RPM1, float gearRatio1)
  {
    RPM = RPM1;
    gearRatio = gearRatio1;
  }
  
}
  
