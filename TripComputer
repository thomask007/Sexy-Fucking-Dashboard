class TripComputer
{
  //Member Variables
  float RPM;
  float gearRatio;
  float totalTravelledDistance; 
  float distanceTravelledInterval;
  float radius;
  float speed;
  
  void getCurrentSpeed(float RPM, float gearRatio) 
  {
    if (filePath == "car_status_BMW_323i.csv")
    {
      radius = 0.23;
    }
    else if (filePath == "car_status_Truck_F150.csv")
    {
      radius = 0.254;
    } 
    speed = ( (RPM/60) * (1/gearRatio) * 2 * PI * radius); // from document
    speed *= 3.6; //Converts to km per hour
  }

 //Speed is equal to the distance travelled in one second so adding the m/s values should give total distance
  void updateTotalDistance()
  {
    distanceTravelledInterval = speed/3600;
    totalTravelledDistance += distanceTravelledInterval;
  } 
  
}
