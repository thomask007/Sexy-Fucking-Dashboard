class SensorDataProvider
{
  //Member Variables
  String filePath;
  Table dataTable;
  int currentIndex;
  TableRow row;
  
  //Reading the input csv file, users choice of csv 
  void Intialize(String filepath)
  {
    dataTable = loadTable(filePath, "header");
  }
  
  //Moves onto the next line by incrementing the currentIndex
  void readNext(int currentIndex)
  {
    row = dataTable.getRow(currentIndex);
    if (currentIndex <= dataTable.getRowCount())
    {
      currentIndex++;
      row = dataTable.getRow(currentIndex);
    }
    else
    {
      return;
    }
  }
  
  //Reading the Time at a certain index
  float readTime()
  {  
    //row = dataTable.getRow(currentIndex);
    float time = row.getFloat("Time");
    return time;
  }
   
  //Reading the RPM at a certain index 
  float readRPM()
  {
    //row = dataTable.getRow(currentIndex);
    float RPM = row.getFloat("RPM");
    return RPM;
  }
  
  //Reading the Fuel Level at a certain index
  float readFuelLevel()
  {
    //row = dataTable.getRow(currentIndex);
    float fuelLevel = row.getFloat("Fuel Level (liter)");
    return fuelLevel;
  }
  
  //Reading the Gear Ratio at a certain index
  float readRatio()
  {
    //row = dataTable.getRow(currentIndex);
    float gearRatio = row.getFloat("Gear Ratio");
    return gearRatio;
  }
  
  //Reading the X coordinate at a certain index
  float readX()
  {
   //row = dataTable.getRow(currentIndex);
   float xCoordinate = row.getFloat("X");
   return xCoordinate;
  }
  
  //Reading the Y coordinate at a certain index 
  float readY()
  {
    //row = dataTable.getRow(currentIndex);
    float yCoordinate = row.getFloat("Y");
    return yCoordinate;
  }
}
